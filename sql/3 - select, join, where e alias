-- seleções simples das tabelas

select * from cliente
select * from contato
select * from email
select * from endereco
select * from telefone

-- utilizando o join em duas tabelas contato e telefone
select id_cliente, nome, motivo, descricao, telefone from cliente
INNER JOIN contato
ON id_cliente = fk_id_cliente
INNER JOIN telefone
ON telefone.fk_id_cliente = id_cliente


--- utilizando where
select id_cliente, nome, motivo, descricao, telefone from cliente
INNER JOIN contato
ON id_cliente = fk_id_cliente
INNER JOIN telefone
ON telefone.fk_id_cliente = id_cliente
where id_cliente = 4

-- utilizando join e alias
select id_cliente, nome AS nomes, id_end as id_endereco, cidade AS Cid from cliente
LEFT JOIN endereco
ON endereco.fk_id_cliente = id_cliente
where id_cliente = 4